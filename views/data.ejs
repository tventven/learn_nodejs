<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <title>Data dari Database</title>
  </head>
  <body>
    <h1>Data dari Database</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">username</th>
          <th scope="col">password</th>
          <th scope="col">aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (results && results.length) { %> <% results.forEach(function(result) { %>
        <tr>
          <td scope="row"><%= result.id %></td>
          <td scope="row"><%= result.username %></td>
          <td scope="row"><%= result.password %></td>
          <td>
            <a href="/update/<%= result.id %>" class="btn btn-primary">Update</a>
            <form action="/delete/<%= result.id %>" method="post">
              <button type="submit" class="btn btn-danger" disabled>Delete</button>
            </form>
          </td>
        </tr>
        <button id="back"><a href="/page/<%= result.username%>">BACK</a></button>
        <% }); %> <% } %>
      </tbody>
    </table>
  </body>
</html>
